#!/usr/bin/env bash
cd ~/hbase1/example1/src/
javac -classpath /usr/local/hbase-0.92.1/hbase-0.92.1.jar,/usr/local/hbase-0.92.1/lib/hadoop-core-1.0.0.jar SecureBase/*.java
jar cvf SecureBase-0.1.jar SecureBase/*.class
rm /usr/local/hbase-0.92.1/lib/SecureBase-0.1.jar
cp SecureBase-0.1.jar /usr/local/hbase-0.92.1/lib
cd /usr/local/hbase-0.92.1/lib
rm ~/.m2/repository/dishant/SecureBase/0.1/SecureBase-0.1.jar
mvn install:install-file -Dfile=SecureBase-0.1.jar -Dversion=0.1 -Dpackaging=jar -DgroupId=dishant -DartifactId=SecureBase
cd ..
mvn compile
cd target/classes
rm hbase-0.92.1.jar
jar cvf hbase-0.92.1.jar *
rm ../../hbase-0.92.1.jar
cp hbase-0.92.1.jar ../../
